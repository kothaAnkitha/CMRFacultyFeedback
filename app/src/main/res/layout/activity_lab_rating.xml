<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cmr.facultyfeedback.ankisami.cmrfacultyfeedback.LabRating">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/year"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Give your Rating"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="27sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignEnd="@+id/button2"
            android:paddingBottom="30dp"/>
        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:text="Usefullness of the experiments in clarifying theoretical concepts"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            />
        <RatingBar
            android:id="@+id/r1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="13dp"
            android:rating="1"/>
        <TextView
            android:id="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:text="All experiments in the syllabus are covered"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            />
        <RatingBar
            android:id="@+id/r2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="13dp"
            android:rating="1"/>
        <TextView
            android:id="@+id/t3"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Usefulness of laboratory instructions"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            />
        <RatingBar
            android:id="@+id/r3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="13dp"
            android:rating="1"/>
        <TextView
            android:id="@+id/t4"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:text="Involvement of the lab instructors in lab conuct and record correction"
            android:textColor="@android:color/black"

            android:textSize="20sp" />
        <RatingBar
            android:id="@+id/r4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="13dp"
            android:rating="1"/>
        <TextView
            android:id="@+id/t5"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:text="Fairness in lab viva and quiz conduct"
            android:textColor="@android:color/black"
            android:textSize="20sp" />
        <RatingBar
            android:id="@+id/r5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="13dp"
            android:rating="1"/>
        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/ratingBar"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:background="@color/colorAccent"
            android:text="Submit"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</ScrollView>
